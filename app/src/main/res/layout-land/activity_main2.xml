<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="16dp"
    android:baselineAligned="false"
    tools:context=".MainActivity2">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:padding="8dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/test_name1"
            android:padding="8dp"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:textSize="30sp"/>
        <TextView
            android:id="@+id/teamAScore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0"
            android:padding="8dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:textSize="30sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_score3"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginTop="70dp"
                android:onClick="score"
                android:text="@string/btn3" />

            <Button
                android:id="@+id/btn_score2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginTop="70dp"
                android:onClick="score"
                android:text="@string/btn2" />

            <Button
                android:id="@+id/btn_score1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginTop="70dp"
                android:onClick="score"
                android:text="@string/btn1" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:padding="8dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/test_name2"
            android:padding="8dp"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:textSize="30sp"/>
        <TextView
            android:id="@+id/teamBScore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0"
            android:padding="8dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:textSize="30sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_score6"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginTop="70dp"
                android:onClick="score"
                android:text="@string/btn3" />

            <Button
                android:id="@+id/btn_score5"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginTop="70dp"
                android:onClick="score"
                android:text="@string/btn2" />

            <Button
                android:id="@+id/btn_score4"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginTop="70dp"
                android:onClick="score"
                android:text="@string/btn1" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
